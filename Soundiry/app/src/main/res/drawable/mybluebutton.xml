<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="100dip" />
            <stroke android:width="1dip" android:color="#4169e1" />
            <gradient android:angle="-90" android:endColor="#4169e1" android:startColor="#4169e1" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1e90ff" />
            <gradient android:angle="-90" android:endColor="#4169e1" android:startColor="#4169e1" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="100dip" />
            <stroke android:width="1dip" android:color="#b0c4de" />
            <gradient android:angle="-90" android:endColor="#b0c4de" android:startColor="#b0c4de" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="100dip" />
            <stroke android:width="1dip" android:color="#1e90ff" />
            <gradient android:angle="-90" android:endColor="#1e90ff" android:startColor="#1e90ff" />
        </shape>
    </item>

</selector>